config globals 'globals'
	option packet_steering '1'
	option ula_prefix 'auto'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'lan1'
	list ports 'lan2'
	list ports 'lan3'

config interface 'loopback'
	option proto 'static'
	option device 'lo'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option proto 'static'
	option device 'br-lan'
	option ipaddr '192.168.1.1'
	option netmask '255.255.255.0'
	option ip6assign '60'

config interface 'wan'
	option proto 'dhcp'
	option device 'wan'
	option metric '10'

config interface 'wwan'
	option proto 'ncm'
	option device '/dev/ttyACM0'
	option pdptype 'IP'
	option apn 'internet'
	option username 'any'
	option password 'any'
	option ipv6 'auto'
	option delay '8'
	option metric '20'

config interface 'openvpn'
	option proto 'none'
	option device 'tun0'
	option metric '5'
